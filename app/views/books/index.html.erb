<body>



<div class="books-row">
  <% @books.each do |book| %>
    <div class="book-card" data-book-id="<%= book.id %>"
         onclick="openPopup(this)">
      <%= image_tag(book.cover_image.url, alt: book.title, class: 'book-cover') if book.cover_image.present? %>
      <h3><%= book.title %></h3>
      <p><%= book.author %></p>
    </div>
  <% end %>
</div>

<div id="popup" class="popup">
  <div class="popup-content">
    <div class="book-cover-container">
      <!-- L'immagine del libro verrà inserita qui -->
    </div>
    <div class="book-details">
      <!-- Titolo e descrizione del libro verranno inseriti qui -->
    </div>
  </div>
  <span class="close-btn" onclick="closePopup()">&times;</span>
</div>

<script>
function openPopup(element) {
  const title = element.getAttribute('data-title');
  const description = element.getAttribute('data-description');
  const imageUrl = element.querySelector('.book-cover').getAttribute('src');
  
  // Inserisci l'immagine e i dettagli del libro nel popup
  document.querySelector('.book-cover-container').innerHTML = `<img src="${imageUrl}" alt="Cover" class="book-cover-popup">`;
  document.querySelector('.book-details').innerHTML = `<h2>${title}</h2><p>${description}</p>`;
  
  // Mostra il popup
  document.getElementById('popup').style.display = 'flex';
  
}


function closePopup() {
  // Nascondi il popup
  document.getElementById('popup').style.display = 'none';
  
  // Rimuovi la classe perché il popup è ora chiuso
  document.body.classList.remove('popup-open');
}


</script>







</body>

